{
	"plugins": [
		"stylelint-order"
	],
	"rules": {
        "at-rule-no-unknown": [true, {"ignoreAtRules": ["mixin", "extend", "include", "for"]}],
		"order/order": [
			"custom-properties",
			"declarations"
		],
		"order/properties-alphabetical-order": true
    },
    "extends": "stylelint-config-recommended"
}
